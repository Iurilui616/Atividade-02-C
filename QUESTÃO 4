#include <stdio.h>

int main() {
    float mes1, mes2, mes3, media;

    printf("Digite o gasto com combustivel no primeiro mes: ");
    scanf("%f", &mes1);

    printf("Digite o gasto com combustivel no segundo mes: ");
    scanf("%f", &mes2);

    printf("Digite o gasto com combustivel no terceiro mes: ");
    scanf("%f", &mes3);

    media = (mes1 + mes2 + mes3) / 3;

    printf("Media de gasto nos tres primeiros meses: %.2f\n", media);

    return 0;
}
