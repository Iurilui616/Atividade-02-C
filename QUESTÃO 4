#include <stdio.h>

int main() {
    int mes1, mes2, mes3, media;

    printf("Gasto com combustivel no primeiro mes: ");
    scanf("%d", &mes1);

    printf("Gasto com combustivel no segundo mes: ");
    scanf("%d", &mes2);

    printf("Gasto com combustivel no terceiro mes: ");
    scanf("%d", &mes3);

    media = (mes1 + mes2 + mes3) / 3;

    printf("Media de gasto nos tres primeiros meses: %d\n", media);

    return 0;
}
